#!/bin/sh

#chkconfig:2345 85 15
#description:homebot shell

HOMEBOT_PATH="/home/pi/homebot/"

start()
{
  echo "###################"
  echo "start homebot"
  su - root -c "cd ${HOMEBOT_PATH}/homebot && bash auto.sh deamon-start-nosudo &"
  su - pi -c "cd ${HOMEBOT_PATH}/homebot && bash auto.sh deamon-start &"

  echo "###################"
  echo "starting homebridge"
  su - pi -c "cd ${HOMEBOT_PATH}/homebridge && bash auto.sh > logger.log &"
}


stop()
{
    echo "stoping homebot"
    su - root -c "cd ${HOMEBOT_PATH}/homebot && bash auto.sh stop"
    pkill -f 'homebridge'
}

restart()
{
    stop
    sleep 1
    start
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart)
    restart
    ;;
  *)
    echo "Syntax Error: release [start|stop|restart]"
    ;;
esac
